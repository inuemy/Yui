<div class="container">

<div class="tytle">
 <h2><%= @customer.last_name %> <%= @customer.first_name %>さんのコメント一覧</h2>
</div>

<% @comments.each do |comment| %>
<div class="row comment_box">
 <div class="col-lg-1">
  <%= image_tag @customer.get_profile_image, size: "60x60" %>
 </div>
 <div class="col-lg-9 comment">
   <%= comment.comment %>
 </div>
 <div class="col-lg-2">
 <% if comment.customer == current_customer %>
  <%= link_to '編集', edit_public_comment_path(comment.id), class: "btn btn-success" %>
  <%= link_to '削除', public_comment_path(comment.id), method: :delete, class: "btn btn-danger" %><br>
 <% end %>
 </div>
</div>
<% end %>
<%= paginate @comments %>
</div>