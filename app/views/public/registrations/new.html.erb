<div class ="container">
 <div class ="tytle">
  <h2>新規登録</h2>
 </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
 <link rel="stylesheets" href="application.css" />

<div class ="signup">
  <div class="field">
    <%= f.label :name, '氏名' %><br />
    <%= f.text_field :last_name, size: 30 %>  <%= f.text_field :first_name, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :name_kana, 'フリガナ' %><br />
    <%= f.text_field :last_name_kana, size: 30 %>  <%= f.text_field :first_name_kana, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :nickname, 'ニックネーム' %><br />
    <%= f.text_field :nickname, size: 40 %>
  </div>

  <div class="field">
    <%= f.label :sex, '性別' %><br>
    <%= f.radio_button :sex, :man %>
    <%= f.label :sex, Customer.sexes_i18n[:man] %>
    <%= f.radio_button :sex, :woman %>
    <%= f.label :sex, Customer.sexes_i18n[:woman]%><br>
  </div>

  <div class="field">
    <%= f.label :birthday, '生年月日' %><br />
    <%= f.date_select(
        :birthday,
        start_year: 1930,
        end_year: (Time.now.year),
        default: Date.new(1989, 1, 1)) %>
  </div>

  <div class="field">
    <%= f.label :prefecture_name, '都道府県' %><br />
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture_name, prompt:"選択してください" %><br>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, size: 40 %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード（6文字以上）' %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", size: 40 %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 40 %>
  </div>

 </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success w-50 mt-2" %>
  </div>
<% end %>
  <div class="actions">
    ↓アカウントをお持ちの方はこちら↓<br>
    <%= link_to "ログイン", new_customer_session_path, class: "btn btn-primary w-50 mt-2" %>
  </div>
</div>

<%#= render "public/shared/links" %>
