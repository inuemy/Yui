<div class="container">
 <div class="tytle">
  <h2>ログイン</h2>
 </div>

<div class="login">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %><br>
    <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
</div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary w-50 mt-2" %>
  </div>
<% end %>
  <div class="actions">
    ↓アカウントをお持ちでない方はこちら↓<br>
    <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-success w-50 mt-2" %>
  </div>
</div>

